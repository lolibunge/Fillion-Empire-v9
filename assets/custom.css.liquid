/* Navigation Menu */

.site-header-actions {
    column-gap: 10px;
}

span.site-header_account-link-text {
  display: none!important; 
}

.live-search-form {
    max-width: 60%;
    margin: 0 100px;
}

.site-navigation {
    justify-content: center;
}

.site-navigation summary.navmenu-link.navmenu-link-depth-1.navmenu-link-parent{
    font-size: 13px;
    font-weight: 700;
}

.site-navigation a.navmenu-link.navmenu-link-depth-1 {
    font-size: 13px!important;
    font-weight: 700!important;
}

.site-navigation ul.navmenu.navmenu-depth-2.multi-column-count-5 a.navmenu-link.navmenu-link-parent {
    font-size: 12px;
    font-weight: bold;
}

.site-navigation ul.navmenu.navmenu-depth-2.multi-column-count-5 li > ul li a.navmenu-link {
    font-size: 11px;
    color: #6b6b6b;
    margin-left: 15px;
    position: relative;
}

.site-navigation ul.navmenu.navmenu-depth-2.multi-column-count-5 li > ul {
    margin-left: 0!important;
}

.site-navigation ul.navmenu.navmenu-depth-2.multi-column-count-5 li > ul li a.navmenu-link:before {
    content: '>';
    position: absolute;
    top: 6px;
    left: -11px;
    font-size: 10px;
    -webkit-transition: all .1s ease;
    -moz-transition: all .1s ease;
    -ms-transition: all .1s ease;
    -o-transition: all .1s ease;
    transition: all .1s ease;
} 

.site-navigation ul.navmenu.navmenu-depth-2.multi-column-count-5 li > ul li:hover a.navmenu-link:before {
    left: -7px;
    color: #de0101;
    -webkit-transition: all .2s ease;
    -moz-transition: all .2s ease;
    -ms-transition: all .2s ease;
    -o-transition: all .2s ease;
    transition: all .2s ease;
}

.site-navigation .navmenu-meganav-wrapper.navmenu-multi-column-items ul.navmenu.navmenu-depth-2.multi-column-count-4 a.navmenu-link.navmenu-link-parent {
    font-size: 12px;
    font-weight: 700;
}

.site-navigation .navmenu-meganav-wrapper.navmenu-multi-column-items ul.navmenu.navmenu-depth-2.multi-column-count-4 ul li a.navmenu-link:before {
    content: '>';
    position: absolute;
    top: 6px;
    left: -11px;
    font-size: 10px;
    -webkit-transition: all .1s ease;
    -moz-transition: all .1s ease;
    -ms-transition: all .1s ease;
    -o-transition: all .1s ease;
    transition: all .1s ease;
}

.site-navigation ul.navmenu.navmenu-depth-2.multi-column-count-5 li>ul li:hover a:before {
    left: -7px;
    color: #de0101;
    -webkit-transition: all .2s ease;
    -moz-transition: all .2s ease;
    -ms-transition: all .2s ease;
    -o-transition: all .2s ease;
    transition: all .2s ease;
}

.site-navigation .navmenu-meganav-wrapper.navmenu-multi-column-items ul.navmenu.navmenu-depth-2.multi-column-count-4 ul li a.navmenu-link {
    font-size: 11px;
    color: #6b6b6b;
    margin-left: 15px;
    position: relative;
}

.site-navigation a.navmenu-link:hover {
    color: #cecece;
}

.site-navigation .navmenu-meganav-wrapper.navmenu-multi-column-items ul.navmenu.navmenu-depth-2.multi-column-count-4 ul {
    margin-left: 0!important;
}

.site-navigation .navmenu-meganav--desktop .navmenu-meganav-standard__wrapper .navmenu-meganav-standard__items {
    display: flex;
    /* grid-template-columns: repeat(auto-fit, minmax(175px, 1fr));
    grid-gap: 2.1875rem; */
    flex-direction: column;
    max-height: 260px;
    flex-wrap: wrap;
    align-items: center;
    column-gap: 10px;
    row-gap: 10px;
}

.site-navigation .navmenu-submenu.navmenu-meganav.navmenu-meganav--desktop ul.navmenu.navmenu-depth-2.navmenu-meganav-standard__items a.navmenu-item-text.navmenu-link-parent {
    font-size: 11px;
}

.navmenu-submenu.navmenu-meganav.navmenu-meganav--desktop {
    width: 95%;
    margin: auto;
    right: 0;
}

.site-navigation details ul.navmenu.navmenu-depth-2.navmenu-submenu li.navmenu-item a.navmenu-link.navmenu-link-depth-2 {
    font-size: 13px;
}


.site-header-actions li a{
    font-size: 13px;
}

.site-header-actions li svg, 
.site-header-cart svg   {
    width: 100%;
    max-width: 1.3125rem;
    height: 100%;
    max-height: 18px;
    color: #999999;
}

button.live-search-button.mdc-ripple-surface.mdc-ripple-upgraded {
    background: unset;
    border: unset;
}

.live-search-button .search-icon--inactive svg {
    color: #000;
}

input.form-field-input.live-search-form-field {
    border: 1px solid rgba(123,124,123,.2);
    border-radius: 4px;
    box-shadow: 0 2px 3px #7b7c7b1c;
}

/* footer */

.site-footer-block-content a {
    font-size: 12px;
}