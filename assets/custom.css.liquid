/* Image With Text */
.image-with-text__container:before {
  border: 2px solid #000;
  position: absolute;
  min-height: calc(100% - 40px);
  top: 40px;
  left: 0;
  width: 100%;
  z-index: 0;
  content: "";
  height: 460px;
}

.image-with-text__container {
  position: relative;
  min-height: 560px;
  padding: 0 30px;
}

.image-with-text__image-wrapper {
  z-index: 1;
  position: absolute;
  top: 20px;
  left: 20px;
  box-shadow: 0 0 10px #CCC;
}

.image-with-text__content {
  z-index: 2;
  position: absolute;
  right: 60px;
  top: 50%;
  background: #fff;
  height: calc(100% - 140px);
  transform: translateY(-46%);
  box-shadow: 0 0 10px #CCC;
}
